{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "dbml",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.line.double-slash.dbml",
				"match": "\/\/.*"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.dbml",
				"match": "\\b(if|while|for|return)\\b"
			}]
		}
	},
	
	"scopeName": "source.dbml"
}